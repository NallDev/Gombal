<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layoutDescription="@xml/activity_onboarding_scene"
    tools:context=".OnboardingActivity">

    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:src="@drawable/onboarding_one"
        tools:layout_editor_absoluteY="205dp" />

    <ImageView
        android:id="@+id/iv_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:src="@drawable/onboarding_two"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/iv_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:src="@drawable/onboarding_three"
        tools:layout_editor_absoluteX="600dp"
        tools:layout_editor_absoluteY="800dp" />

    <View
        android:id="@+id/bg_onboarding"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/rectangle_top_rounded"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_indicator_one"
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_onboarding"
        app:strokeWidth="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_indicator_two"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/v_indicator_one"
        app:layout_constraintTop_toTopOf="@id/bg_onboarding"
        app:strokeWidth="0dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/v_indicator_three"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toEndOf="@id/v_indicator_two"
        app:layout_constraintTop_toTopOf="@id/bg_onboarding"
        app:strokeWidth="0dp" />

    <TextView
        android:id="@+id/tv_title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/title_onboarding_one"
        android:textColor="@color/colorOnBackground"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_one" />

    <TextView
        android:id="@+id/tv_subtitle_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/subtitle_onboarding_one"
        android:textColor="@color/subtitle"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_one" />

    <TextView
        android:id="@+id/tv_title_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/title_onboarding_two"
        android:textColor="@color/colorOnBackground"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_one" />

    <TextView
        android:id="@+id/tv_subtitle_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/subtitle_onboarding_two"
        android:textColor="@color/subtitle"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_two" />

    <TextView
        android:id="@+id/tv_title_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/title_onboarding_three"
        android:textColor="@color/colorOnBackground"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/v_indicator_one" />

    <TextView
        android:id="@+id/tv_subtitle_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/subtitle_onboarding_three"
        android:textColor="@color/subtitle"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_three" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_next"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="0dp" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/poppins_regular"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_next"
        app:layout_constraintStart_toStartOf="@id/btn_next"
        app:layout_constraintTop_toTopOf="@id/btn_next" />

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/ic_next"
        app:layout_constraintBottom_toBottomOf="@id/btn_next"
        app:layout_constraintEnd_toEndOf="@id/btn_next"
        app:layout_constraintTop_toTopOf="@id/btn_next" />

</androidx.constraintlayout.motion.widget.MotionLayout>